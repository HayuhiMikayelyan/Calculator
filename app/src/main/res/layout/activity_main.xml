<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:gravity="right"
        android:paddingHorizontal="20dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="30sp"
        android:lines="3"
        app:layout_constraintBottom_toTopOf="@+id/answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:gravity="right"
        android:paddingHorizontal="20dp"
        android:text=""
        android:textColor="#7C7A7A"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/action_button_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />

    <TextView
        android:id="@+id/btn_C"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/action_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="AC"
        android:textColor="@color/action_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
         />


    <TextView
        android:id="@+id/btn_openBracket"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/action_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="("
        android:textColor="@color/action_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        />

    <TextView
        android:id="@+id/btn_closeBracket"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/action_button"
        android:gravity="center"
        android:padding="10dp"
        android:text=")"
        android:textColor="@color/action_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
         />

    <TextView
        android:id="@+id/btn_devide"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/action_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="/"
        android:textColor="@color/action_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
         />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:constraint_referenced_ids="btn_C,btn_openBracket,btn_closeBracket,btn_devide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_openBracket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />

    <TextView
        android:id="@+id/btn_7"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/number_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="7"
        android:textColor="@color/number_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        />

    <TextView
        android:id="@+id/btn_8"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/number_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="8"
        android:textColor="@color/number_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="495dp" />

    <TextView
        android:id="@+id/btn_9"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/number_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="9"
        android:textColor="@color/number_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        />

    <TextView
        android:id="@+id/btn_multiply"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/action_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="*"
        android:textColor="@color/action_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:constraint_referenced_ids="btn_7,btn_8,btn_9,btn_multiply"
        app:layout_constraintEnd_toStartOf="@+id/btn_openBracket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flow" />

    <TextView
        android:id="@+id/btn_4"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/number_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="4"
        android:textColor="@color/number_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        />

    <TextView
        android:id="@+id/btn_5"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/number_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="5"
        android:textColor="@color/number_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="495dp" />

    <TextView
        android:id="@+id/btn_6"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/number_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="6"
        android:textColor="@color/number_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        />

    <TextView
        android:id="@+id/btn_minus"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/action_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="-"
        android:textColor="@color/action_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:constraint_referenced_ids="btn_4,btn_5,btn_6,btn_minus"
        app:layout_constraintEnd_toStartOf="@+id/btn_openBracket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flow2" />



    <TextView
        android:id="@+id/btn_1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/number_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="1"
        android:textColor="@color/number_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        />

    <TextView
        android:id="@+id/btn_2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/number_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="2"
        android:textColor="@color/number_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="495dp" />

    <TextView
        android:id="@+id/btn_3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/number_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="3"
        android:textColor="@color/number_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        />

    <TextView
        android:id="@+id/btn_plus"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/action_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="+"
        android:textColor="@color/action_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:constraint_referenced_ids="btn_1,btn_2,btn_3,btn_plus"
        app:layout_constraintEnd_toStartOf="@+id/btn_openBracket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flow3" />

    <TextView
        android:id="@+id/btn_point"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/number_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="."
        android:textColor="@color/number_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        />

    <TextView
        android:id="@+id/btn_0"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/number_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="0"
        android:textColor="@color/number_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/number_button"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/number_button_foreground"
        android:textSize="20sp"
        android:text="Back"
        app:layout_constraintWidth_percent="0.2"
        />

    <TextView
        android:id="@+id/btn_equals"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/action_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="="
        android:textColor="@color/action_button_foreground"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.2"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:constraint_referenced_ids="btn_point,btn_0,btn_back,btn_equals"
        app:layout_constraintEnd_toStartOf="@+id/btn_openBracket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flow4" />

</androidx.constraintlayout.widget.ConstraintLayout>